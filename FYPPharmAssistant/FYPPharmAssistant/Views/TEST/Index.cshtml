@model FYPPharmAssistant.ViewModel.PurchaseInvoiceEntryViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="wizard">
    <h1>Purchase Invoice Entry</h1>
    <div>
        @using(Html.BeginForm())
        {
            <table width="800">
                <tr>
                    <td>
                        <label>PurchaseID:</label>
                        @Html.EditorFor(model => model.PurchaseID, new { htmlAttributes = new { @class = "form-control" } })
                    </td>
                    <td>
                        <label>Date</label>
                        @Html.EditorFor(model => model.InvocingDate, new { htmlAttributes = new { @class = "form-control" } })
                    </td>
                </tr>
                <tr>
                    <td>
                        <label>Amount</label>
                        @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
                    </td>
                    <td>
                        <label>Discount</label>
                        @Html.EditorFor(model => model.Discount, new { htmlAttributes = new { @class = "form-control" } })
                    </td>
                </tr>
                <tr>
                    <td>
                        <label>Tax</label>
                        @Html.EditorFor(model => model.Tax, new { htmlAttributes = new { @class = "form-control" } })
                    </td>
                    <td>
                        <label>Grand Total</label>
                        @Html.EditorFor(model => model.GrandTotal, new { htmlAttributes = new { @class = "form-control" } })
                    </td>
                </tr>
                <tr>
                    <td rowspan="2">
                        <label>Remarks</label>
                        @Html.TextAreaFor(model => model.Remarks, htmlAttributes: new { @class = "form-control" })
                    </td>                    
                </tr>
            </table>    
            
            <div>
                <label>Payment</label>
                @Html.CheckBoxFor(model => model.IsPaid)
            </div>
         <input type="submit" value="Save and Add items" id="btnSaveAndAddItems"/>
        }
    </div>


    <h1>Purchase Item Entry</h1>
    <div>
        <div>
            <label>Batch</label>
            @Html.EditorFor(model => model.BatchNo, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.BatchNo, "", new { @class = "text-danger" })
        </div>
        <div>
            <label>Qty</label>
            @Html.EditorFor(model => model.Qty, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Qty, "", new { @class = "text-danger" })
        </div>
        <div>
            <label>Cost Price</label>
            @Html.EditorFor(model => model.CostPrice, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CostPrice, "", new { @class = "text-danger" })
        </div>
        <div>
            <label>Selling Price</label>
            @Html.EditorFor(model => model.SellingPrice, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SellingPrice, "", new { @class = "text-danger" })
        </div>
        <div>
            <label>Expiry</label>
            @Html.EditorFor(model => model.Expiry, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Expiry, "", new { @class = "text-danger" })
        </div>
       

        <input type="submit" value="Add to list" />


    </div>
</div>

<script>
    // Initialize wizard
    var wizard = $("#wizard").steps();

   
</script>

